    </dependency>
    <dependency>
      <groupId>eu.iksproject</groupId>
      <artifactId>eu.iksproject.kres.semion.manager</artifactId>
	  <version>${kres-version}</version>
      <scope>test</scope>
    </dependency>
	<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.4</version>
			<scope>test</scope>
                        <exclusions>
                            <exclusion>
                            <groupId>org.slf4j</groupId>
