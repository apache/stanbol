<project name="OpenNLP Model Download Helper" default="download" basedir=".">
  <description>
    Contains only a singel target that is used by the Maven Ant
    Plugin to download Sentiment Models from the Web
  </description>
   
  <target name="download">
   <copy todir="${target.directory}" flatten="true">
      <resources>
        <!--
         Include the LICENSE in the Bundle
         -->
        <url url="${model.url}/LICENSE.SentiWS"/>
        <!-- positive and negative words -->
        <url url="${model.url}/SentiWS_v1.8b_Positive.txt"/>
        <url url="${model.url}/SentiWS_v1.8b_Negative.txt"/>
      </resources>
    </copy>
  </target>
</project>