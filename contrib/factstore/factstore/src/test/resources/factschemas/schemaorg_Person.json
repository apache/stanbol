/*
 * Schema to describe a person.
 * Schema ID: http://schema.org/Person
 */
{
  "@context" : {
    "schema"  : "http://schema.org/",
    "xsd" : "http://www.w3.org/2001/XMLSchema#",
    "@types" : {
      "description"     : "xsd:string",
      "image"           : "xsd:anyURI",
      "name"            : "xsd:string",
      "url"             : "xsd:anyURI",
      "additionalName"  : "xsd:string",
      "address"         : "schema:PostalAddress",
      "affiliation"     : "schema:Organization",
      "alumniOf"        : "schema:EducationalOrganization",
      "awards"          : "xsd:string",
      "birthDate"       : "xsd:date",
      "children"        : "schema:Person",
      "colleagues"      : "schema:Person",
      "contactPoints"   : "schema:ContactPoint",
      "deathDate"       : "xsd:date",
      "email"           : "xsd:string",
      "familyName"      : "xsd:string",
      "faxNumber"       : "xsd:string",
      "follows"         : "schema:Person",
      "gender"          : "xsd:string",
      "givenName"       : "xsd:string",
      "homeLocation"    : ["schema:Place", "schema:ContactPoint"],
      "honorificPrefix" : "xsd:string",
      "honorificSuffix" : "xsd:string",
      "interactionCount": "xsd:string",
      "jobTitle"        : "xsd:string",
      "knows"           : "schema:Person",
      "memberOf"        : "schema:Organization",
      "nationality"     : "schema:Country",
      "parents"         : "schema:Person",
      "performerIn"     : "schema:Event",
      "relatedTo"       : "schema:Person",
      "siblings"        : "schema:Person",
      "spouse"          : "schema:Person",
      "telephone"       : "xsd:string",
      "workLocation"    : ["schema:Place", "schema:ContactPoint"],
      "worksFor"        : "schema:Organization"
    }
  }
}