<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.apache.stanbol</groupId>
    <artifactId>org.apache.stanbol.entityhub.parent</artifactId>
    <version>0.1-SNAPSHOT</version>
    <relativePath>../../parent</relativePath>
  </parent>

  <groupId>org.apache.stanbol</groupId>
  <artifactId>org.apache.stanbol.entityhub.servicesapi</artifactId>
  <packaging>bundle</packaging>
  <version>0.1-SNAPSHOT</version>

  <name>Apache Stanbol Entityhub Services API</name>
  <description>The Services API of the Entityhub</description>

  <inceptionYear>2010</inceptionYear>

  <scm>
    <connection>
      scm:svn:http://svn.apache.org/repos/asf/incubator/stanbol/trunk/entityhub/generic/servicesapi
    </connection>
    <developerConnection>
      scm:svn:https://svn.apache.org/repos/asf/incubator/stanbol/trunk/entityhub/generic/servicesapi
    </developerConnection>
    <url>http://incubator.apache.org/stanbol</url>
  </scm>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Export-Package>
              org.apache.stanbol.entityhub.servicesapi;version=${pom.version},
              org.apache.stanbol.entityhub.servicesapi.defaults;version=${pom.version},
              org.apache.stanbol.entityhub.servicesapi.model;version=${pom.version},
              org.apache.stanbol.entityhub.servicesapi.model.rdf;version=${pom.version},
              org.apache.stanbol.entityhub.servicesapi.mapping;version=${pom.version},
              org.apache.stanbol.entityhub.servicesapi.query;version=${pom.version},
              org.apache.stanbol.entityhub.servicesapi.site;version=${pom.version},
              org.apache.stanbol.entityhub.servicesapi.util;version=${pom.version},
              org.apache.stanbol.entityhub.servicesapi.yard;version=${pom.version}
            </Export-Package>
           <Private-Package>
            </Private-Package>
           </instructions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-scr-plugin</artifactId>
        <version>1.4.4</version>
      </plugin>
    </plugins>
  </build>

  <dependencies>
